{
  "name": "intercept-wave",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "2.1.0",
  "publisher": "Ark65",
  "icon": "resources/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhongmiao-org/intercept-wave-vscode.git"
  },
  "license": "MIT",
  "l10n": "./l10n",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Testing"
  ],
  "keywords": [
    "mock",
    "proxy",
    "api",
    "interceptor",
    "charles",
    "nginx"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "interceptWave.startServer",
        "title": "%command.startServer%"
      },
      {
        "command": "interceptWave.stopServer",
        "title": "%command.stopServer%"
      },
      {
        "command": "interceptWave.configure",
        "title": "%command.configure%"
      },
      {
        "command": "interceptWave.openConfig",
        "title": "%command.openConfig%"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "intercept-wave",
          "title": "%view.container.title%",
          "icon": "resources/icon-dark.svg"
        }
      ]
    },
    "views": {
      "intercept-wave": [
        {
          "id": "interceptWaveView",
          "name": "%view.title%",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "interceptWave.port": {
          "type": "number",
          "default": 8888,
          "description": "%config.port.description%"
        },
        "interceptWave.interceptPrefix": {
          "type": "string",
          "default": "/api",
          "description": "%config.interceptPrefix.description%"
        },
        "interceptWave.baseUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "%config.baseUrl.description%"
        },
        "interceptWave.stripPrefix": {
          "type": "boolean",
          "default": true,
          "description": "%config.stripPrefix.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy:templates",
    "copy:templates": "node scripts/copy-templates.js",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "test": "npm run compile && node ./out/test/runTest.js",
    "test:unit": "npm run compile && node ./out/test/unit/runner.js",
    "test:coverage": "c8 npm run test:unit",
    "test:coverage:ci": "c8 --reporter=lcov --reporter=text --reporter=json-summary npm run test:unit",
    "build:local": "npm run compile && npx @vscode/vsce package --allow-star-activation --allow-missing-repository"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.6",
    "@types/node": "^24.7.2",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^4.0.0",
    "@types/uuid": "^9.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-electron": "^2.5.2",
    "c8": "^9.1.0",
    "chai": "^4.5.0",
    "eslint": "^8.57.0",
    "mocha": "^10.3.0",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@vscode-elements/elements": "^2.3.1",
    "@vscode/codicons": "^0.0.41",
    "uuid": "^9.0.1"
  }
}
