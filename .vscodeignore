# ============================================
# Step 1: Exclude everything we don't need
# ============================================

# Development files
.vscode/**
.vscode-test/**
.idea/**
src/**
scripts/**
.github/**

# Test files
out/test/**
coverage/**
.nyc_output/**
.c8rc.json
.mocharc.json

# Build and config files
tsconfig.json
.eslintrc.json
.prettierrc.json
.prettierignore
.codecov.yml
vsc-extension-quickstart.md
.yarnrc

# Git files
.git
.gitignore
.gitattributes

# All node_modules (we'll include specific ones back later)
node_modules/**

# ============================================
# Step 2: Include only what we need
# ============================================

# Include only compiled JavaScript output (no TypeScript, no source maps)
!out/*.js
!out/common/**/*.js
!out/providers/**/*.js
!out/templates/**/*.html

# Include runtime dependencies (from package.json dependencies only)
!node_modules/@vscode-elements/elements/package.json
!node_modules/@vscode-elements/elements/dist/**/*.js
!node_modules/@vscode-elements/elements/*.json

!node_modules/@vscode/codicons/package.json
!node_modules/@vscode/codicons/dist/**

!node_modules/uuid/package.json
!node_modules/uuid/dist/**

# Include resources and localization
!resources/**
!l10n/**

# Include essential files
!package.json
!package.nls.json
!package.nls.zh-cn.json
!README.md
!LICENSE

# ============================================
# Step 3: Exclude patterns even in included paths
# ============================================

# Exclude all TypeScript source files
**/*.ts

# Exclude all source maps
**/*.map

# Exclude all markdown (except README.md at root)
**/*.md
!README.md

# Exclude test files anywhere
**/*.test.js
**/*.spec.js
**/test/**
**/tests/**