{
  "name": "intercept-wave",
  "displayName": "Intercept Wave",
  "description": "A powerful VSCode extension that combines proxy and interception capabilities similar to Nginx and Charles, designed for local development",
  "version": "1.0.0",
  "publisher": "zhongmiao",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Testing"
  ],
  "keywords": [
    "mock",
    "proxy",
    "api",
    "interceptor",
    "charles",
    "nginx"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "interceptWave.startServer",
        "title": "Intercept Wave: Start Mock Server"
      },
      {
        "command": "interceptWave.stopServer",
        "title": "Intercept Wave: Stop Mock Server"
      },
      {
        "command": "interceptWave.configure",
        "title": "Intercept Wave: Configure"
      },
      {
        "command": "interceptWave.openConfig",
        "title": "Intercept Wave: Open Configuration File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "intercept-wave",
          "title": "Intercept Wave",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "intercept-wave": [
        {
          "id": "interceptWaveView",
          "name": "Mock Server"
        }
      ]
    },
    "configuration": {
      "title": "Intercept Wave",
      "properties": {
        "interceptWave.port": {
          "type": "number",
          "default": 8888,
          "description": "Mock server port"
        },
        "interceptWave.interceptPrefix": {
          "type": "string",
          "default": "/api",
          "description": "API path prefix to intercept"
        },
        "interceptWave.baseUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "Base URL of the original server"
        },
        "interceptWave.stripPrefix": {
          "type": "boolean",
          "default": true,
          "description": "Strip intercept prefix before matching mock APIs"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@types/vscode": "^1.105.0",
    "@vscode/test-electron": "^2.5.2",
    "typescript": "^5.9.3"
  }
}